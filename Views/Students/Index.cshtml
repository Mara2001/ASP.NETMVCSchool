@{
}

@model IEnumerable<StudentDTO>
<h1>List of all students</h1>
@foreach (var student in Model)
{
    <div class="border border-1 p-2">
        <h5>@student.FirstName @student.LastName</h5>
		<p>Id: @student.Id<p/>
        <p>Date of Birth: @student.DateOfBirth.ToShortDateString()</p>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
        <form method="post">
			<button type="submit" class="btn btn-danger">Delete</button>
		</form>
    </div>
}
<hr />
<div>
    <a class="btn btn-success" asp-action="Create">Create</a>
</div>

